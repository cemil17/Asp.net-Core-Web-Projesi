@using EntityLayer.Concrete
@model List<Portfolio>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE HTML>
<html>
<head>

	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<link href="~/admin2/css/bootstrap.css" rel='stylesheet' type='text/css' />
	<link href="~/admin2/css/style.css" rel='stylesheet' type='text/css' />
	<link href="~/admin2/css/font-awesome.css" rel="stylesheet">
	<link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic,400italic,700,700italic' rel='stylesheet' type='text/css'>
	<link href="~/admin2/css/animate.css" rel="stylesheet" type="text/css" media="all">

</head>

<body>
	<div class="row">
		<div class="col">
			<div class="card">
				<!-- Card header -->
				<div class="card-header border-0">
					<h3 class="mb-0">Projeler</h3>
					<div class="col-lg-12 col-5 text-right">
						<a class="btn btn-success" href="/Portfolio/PortfolioAdd/">Proje Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col">
				<div class="col-md-12">
					<div class="profile-top">
						<img src="@item.ImageURL" height="300" width="300" alt="">
					</div>
					<div class="profile-text">
						<div class="profile-row row-middle">
							<div class="profile-left">
								<i class="fa fa-mobile profile-icon"></i>
							</div>
							<div class="profile-right">
								<h4>
									<span class="badge badge-primary">
										Proje Adı;
									</span>
									-
									<span class="badge badge-warning w-30 p-3">@item.Name</span>
								</h4>
							</div>
							<div class="clearfix"> </div>
						</div>
						<div class="profile-row">
							<div class="profile-left">
								<i class="fa fa-file-text profile-icon"></i>
							</div>
							<div class="profile-right">
								<h4>GitHub Linki</h4>
								<span class="badge badge-dark"><a href="@item.ProjectLink">@item.ProjectLink</a></span>
							</div>
							<div class="clearfix"> </div>
						</div>
					</div>
					<br>
					<div class="profile-btm">
						<a href="" class="btn btn-danger">
							<i class="ni ni-fat-remove"></i>
						</a>
						<a href="" class="btn btn-success">
							<i class="ni ni-settings-gear-65"></i>
						</a>
					</div>
					<br />
					<br />
				</div>
			</div>
		}
	</div>
</body>
</html>

