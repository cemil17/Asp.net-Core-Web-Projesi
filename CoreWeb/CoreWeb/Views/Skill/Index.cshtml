@using EntityLayer.Concrete
@model List<Skill>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
	<div class="col">
		<div class="card bg-default shadow">
			<div class="card-header bg-transparent border-0 ">
				<h3 class="text-white mb-0">Yetenekler</h3>
				<div class="col-lg-12 col-5 text-right">
					<button class="btn btn-secondary" data-toggle="modal" data-target="#Modal1">Yetenek Ekle</button>
					@*					<a href="#" class="btn btn-sm btn-neutral">Yetenek Ekle</a>
					*@
				</div>
			</div>
			<div class="table-responsive">
				<table class="table align-items-center table-dark table-flush">
					<thead class="thead-dark">
						<tr>
							<th scope="col" class="sort" data-sort="name">#</th>
							<th scope="col" class="sort" data-sort="budget">Yetenek</th>
							<th scope="col" class="sort" data-sort="status">Yetenek Değeri</th>
							<th scope="col" class="sort" data-sort="completion">İşlemler</th>
							<th scope="col"></th>
						</tr>
					</thead>
					@foreach (var item in Model)
					{
						<tbody class="list">
							<tr>
								<th>@item.SkillID</th>
								<th scope="row">
									<div class="media align-items-center">
										<a href="#" class="avatar rounded-circle mr-3">
											<img alt="Image placeholder" src="~/Admin/assets/img/theme/react.jpg">
										</a>
										<div class="media-body">
											<span class="name mb-0 text-sm">@item.Title</span>
										</div>
									</div>
								</th>
								<td>
									<div class="d-flex align-items-center">
										<span class="completion mr-2">@item.Value %</span>
										<div>
											<div class="progress">
												<div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
											</div>
										</div>
									</div>
								</td>
								<td class="text-right">
									<div class="dropdown">
										<a class="btn btn-outline-warning text-secondary" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											<i class="ni ni-send"></i>
										</a>
										<div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow text-center">
											<a class="btn btn-danger" href="/Skill/SkillDelete/@item.SkillID">Sil</a>
											<a class="btn btn-success" href="/Skill/SkillUpdate/@item.SkillID">Güncelle</a>
										</div>
									</div>
								</td>
							</tr>

						</tbody>

					}
				</table>
			</div>
		</div>
	</div>
</div>

<div class="modal" id="Modal1">
	<div class="modal-dialog" tabindex="-1">
		<div class="modal-content">
			<div class="header card-header bg-transparent pb-5" ">
				<div class="text-muted text-center mt-2 mb-3">
					<b>	Yeni Yetenek Ekle</b>
					<a class="close text-danger" href="/Skill/Index">&times;</a>
				</div>
			</div>
			<div class="modal-body">
				<form method="post" action="/Skill/SkillAdd/">
					<input type="text" placeholder="Yetenek" name="Title" class="form-control" />
					<br />
					<input type="text" placeholder="Yetenek Değeri" name="Value" class="form-control" />
					<br />
					<div class="modal-footer">
						<button class="btn btn-warning"> Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>